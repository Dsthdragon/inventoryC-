<Page x:Class="TurboInventory.Pages.Items"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurboInventory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Items">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch" Height="50" Orientation="Horizontal" FlowDirection="RightToLeft" >
                <Button Margin="30,0" HorizontalAlignment="Right" VerticalAlignment="Center" Background="DarkOliveGreen" x:Name="AddItem" Foreground="WhiteSmoke" Height="40" FontSize="25" Width="100" Click="AddItem_Click" >ADD</Button>
            </StackPanel>
            <Border DockPanel.Dock="Top" HorizontalAlignment="Stretch" Height="5" Background="Green" />
            <DataGrid x:Name="itemGrid" VerticalAlignment="Stretch" 
                      ItemsSource="{Binding items}" IsReadOnly="True" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="50" Header="Id" Binding="{Binding Id}" />
                    <DataGridTextColumn Width="*" Header="Name" Binding="{Binding Name}" />
                    <DataGridTextColumn Width="50" Header="Stock" Binding="{Binding Stock}" />
                    <DataGridTextColumn Width="*" Header="Description" Binding="{Binding Description}" />
                    <DataGridTextColumn Width="150" Header="Created" Binding="{Binding Created}" />
                    <DataGridTemplateColumn Width="100" Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Background="DarkOliveGreen" x:Name="editItem" Foreground="WhiteSmoke" Height="24" Width="100" Click="editItem_Click">EDIT</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Page>
